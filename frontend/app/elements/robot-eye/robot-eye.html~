<link rel="import" href="../../bower_components/polymer/polymer.html">

<dom-module id="robot-eye">
  <template>
    <style>
      :host {
        display: block;
        height: 100%;
        width: 100%;
        overflow: hidden;
				border-radius: 50%;
				bottom: 15px;
      }
      #eyelid {
        position: absolute;
        background-color: #512Da8;
        width: 100%;
        height: 0px;
      }
			#iris {
				
			}
    </style>
    <div id="eye">
      <div id="eyelid"></div>
      <svg width="100%" height="100%">
        <ellipse 						cx="50%" cy="50%" rx="100%" ry="100%" 	fill="#fff" />
				<ellipse id="iris" 	cx="50%" cy="50%" rx="40%" 	ry = "40%" 	fill$="{{eyeColor}}"/> <!--#009933-->
        <ellipse 						cx="50%" cy="50%" rx="30%" 	ry="30%" 		fill="#000" />
      </svg>
    </div>
  </template>
  <script>
  (function() {
    'use strict';

    Polymer({
      is: 'robot-eye',

			properties: {
				eyeColor: { value: '#009933' }
			},

      blink: function() {
        var eyelid = this.$.eyelid;
        eyelid.animate([{'height': '0px'}, {'height': '110%'}], 100, 'swing', function() {
          eyelid.animate([{'height': '100%'}, {'height': '0px'}], 100);
        });
      },

			//robot-face calls this to edit the eye by setting attributes.
			edit: function(params){
				// TODO is there a better way to handle multipletypes of edit, maybe with a loop?
				if( params !== null ){
					this.$.iris.style.fill = params;
				}
			}
    });
  })();
  </script>
</dom-module>
